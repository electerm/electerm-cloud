doctype html
html
  head
    title #{siteName}
    meta(name='description', content=desc)
    meta(name='keywords', content=keywords)
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='author' content='ZHAO Xudong')
    link(rel='icon' href='https://electerm.html5beta.com/favicon.ico' type='image/x-icon')
    style.
      body {
        background: #ffffff;
      }
      #content-loading {
        text-align: center;
        padding: 30px 10px;
      }
      .pd3 {
        padding: 15px;
      }
      .iblock {
        display: inline-block;
      }
      #animate {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: 400px;
        z-index: -1;
      }
    - if (!dev)
      link(rel='stylesheet', href=cssUrl)

  body
    #content-loading
      .pd3
        img.iblock(src='https://electerm.html5beta.com/electerm.png', alt='', height=80)
      .pd3
        | loading...
    #container
    #animate
    script(crossorigin, src='//cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js')
    script(crossorigin, src='//cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.globe.min.js')
    //- script(async, src='https://unpkg.com/es-module-shims@1.6.3/dist/es-module-shims.js')
    script.
      window.et = {
        loginUrl: '!{loginUrl}'
      }
    //- script(type='importmap').
    //-   {
    //-     "imports": {
    //-       "three": "https://unpkg.com/three@0.155.0/build/three.module.js",
