{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./api/*.ts", "src/client/common/fetch.jsx"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "extends": "@tsconfig/recommended/tsconfig.json"
}
